<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.makena.anew.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btn_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView"
            android:layout_marginTop="123dp"
            android:text="Okay"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_okay"
            android:layout_alignBottom="@+id/btn_okay"
            android:layout_column="1"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_row="1"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="Two"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="348dp" />

        <Button
            android:id="@+id/btn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_okay"
            android:layout_alignBottom="@+id/btn_okay"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="2"
            android:layout_row="1"
            android:text="One"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="112dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_two"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btn_two"
            android:layout_column="2"
            android:layout_marginBottom="112dp"
            android:layout_row="13"
            android:text="Register" />

        <Button
            android:id="@+id/btn_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_okay"
            android:layout_alignBottom="@+id/btn_okay"
            android:layout_column="1"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_row="3"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="Listview"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="348dp" />

        <Button
            android:id="@+id/btn_list_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_okay"
            android:layout_alignBottom="@+id/btn_okay"
            android:layout_column="0"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_row="3"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="Custom List"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="348dp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
